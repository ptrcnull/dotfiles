#!/bin/sh

usage() {
	echo "usage: git accept <--ours|--theirs> [file...]"
}

repl=""

for arg; do
	case "$arg" in
	-h|--help)
		usage
		exit 0
		;;
	--ours)
		repl='$1'
		shift
		;;
	--theirs)
		repl='$2'
		shift
		;;
	--*)
		usage
		exit 1
		;;
	*)
		set -- "$@" "$arg"
		shift
		;;
	esac
done

if [ "$repl" = "" ]; then
	usage
	exit 1
fi

(
	if [ "$#" -eq 0 ]; then
		git status --porcelain | rg UU | cut -c4-
	else
		for arg; do echo "$arg"; done
	fi
) | while read -r file; do
	sd '<<<<<<< (HEAD|Updated upstream)\n([\s\S]*?)(?:\n\|\|\|\|\|\|\| (parent of|Stash base)[\s\S]*?)?=======\n([\s\S]*?)>>>>>>> .*' "$repl" "$file"
	git add "$file"
done
