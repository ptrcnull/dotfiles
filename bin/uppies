#!/bin/sh

NORMAL="\033[1;0m"
STRONG="\033[1;1m"
RED="\033[1;31m"
GREEN="\033[1;32m"
YELLOW="\033[1;33m"
BLUE="\033[1;34m"

cd ~/aports
shuf | parallel -j16 apklatest -q {} | while read -r line; do
  set -- $line
  cols=$(tput cols)
  printf "$GREEN>>> $BLUE$STRONG%s$NORMAL: upgrade: %s -> %s\n" "$1" "$2" "$3"
  printf "%${cols}s" '' | tr ' ' '-'
  head */$1/APKBUILD
  printf "%${cols}s" '' | tr ' ' '-'
  gum confirm && abump $1 $3
done
