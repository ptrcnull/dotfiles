#!/bin/sh

if [ "$CARCH" ]; then
	arch="$CARCH"
else
	arch="$(apk --print-arch)"
fi

# get_alpine_index <spec>
get_aports_index() {
	file="/var/lib/mirror/$1/$arch/APKINDEX.tar.gz"
	if [ -f "$file" ]; then
		exec tar xOf "$file" APKINDEX
	else
		exec curl -s "https://dl-cdn.alpinelinux.org/alpine/$1/$arch/APKINDEX.tar.gz" | tar xzO APKINDEX
	fi
}

# get_all_indexes <ver>
get_all_indexes() {
	get_aports_index "$1/main"
	get_aports_index "$1/community"
	if [ "$1" == "edge" ]; then
		get_aports_index "$1/testing"
	fi
}

case "$1" in
	v3.*/*|edge/*) get_aports_index "$1" ;;
	v3.*|edge) get_all_indexes "$1" ;;
	*) echo "huh?"; exit 1 ;;
esac

