#!/bin/sh

new_display=":$(( $(ls -1 /tmp/.X11-unix/X* | cut -c17- | sort -n | tail -n1) + 1 ))"

Xephyr -br -ac -noreset -screen 1920x1080 "$new_display" &
#Xwayland -geometry 1920x1080 -fullscreen "$new_display" &
export DISPLAY="$new_display"
sleep 2
export _NO_ENVIRONMENT=1
unset GDK_BACKEND
unset WAYLAND_DISPLAY
unset QT_QPA_PLATFORM
unset XDG_SESSION_TYPE
unset SDL_VIDEODRIVER
exec dbus-run-session -- fluxbox
